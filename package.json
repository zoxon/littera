{
  "name": "@zoxon/littera",
  "version": "4.0.0",
  "main": "dist/littera.css",
  "description": "Nano typographic framework",
  "keywords": [
    "css",
    "nano",
    "typography",
    "framework"
  ],
  "homepage": "https://github.com/zoxon/littera",
  "author": "Velicko Konstantin <zoxon.box@gmail.com> (https://github.com/zoxon)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoxon/littera.git"
  },
  "bugs": {
    "url": "https://github.com/zoxon/littera/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md,markdown}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:dist": "rimraf ./dist",
    "mkdir": "npm-run-all mkdir:*",
    "mkdir:dist": "mkdirp ./dist",
    "build": "npm-run-all clean mkdir build:*",
    "build:styles": "postcss ./src/index.css --output ./dist/littera.min.css",
    "publish": "cross-env NODE_ENV=production npm run build",
    "watch": "npm run build:styles -- --watch",
    "dev": "npm run watch",
    "start": "npm run dev",
    "lint-staged": "cross-env-shell PRE_COMMIT=true lint-staged"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.0",
    "lint-staged": "^16.1.5",
    "mkdirp": "^3.0.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1"
  }
}
